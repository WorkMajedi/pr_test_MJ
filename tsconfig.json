{
    "compilerOptions": {
        "noImplicitAny": false,
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "jsxImportSource": "@emotion/react",
        "baseUrl": ".",
        "paths": {
            "@definitions/*": ["src/configs/definitions/*"],
            "@definitions": ["src/configs/definitions"],
            "@api/*": ["src/api/*"],
            "@types/*": ["src/types/"],
            "@interfaces": ["src/assets/interfaces"],
            "@components/*": ["src/components/*"],
            "@components": ["src/components"],
            "@styles/*": ["src/assets/styles/*"],
            "@styles": ["src/assets/styles"],
            "@public/*": ["public/*"],
            "@public": ["public"],
            "@components/icons": ["src/components/icons"],
            "@containers/layouts/*": ["src/containers/layouts/*"],
            "@containers/layouts": ["src/containers/layouts"],
            "@containers/screens/*": ["src/containers/screens/*"],
            "@containers/screens": ["src/containers/screens"],
            "@containers/sections/*": ["src/containers/sections/*"],
            "@containers/sections": ["src/containers/sections"],
            "@services/*": ["src/services/*"],
            "@services": ["src/services"],
            "@graphqlTypes/*": ["src/adapters/graphql/__generated__/*"],
            "@graphqlTypes": ["src/adapters/graphql/__generated__"],
            "@adapters/*": ["src/adapters/*"],
            "@adapters": ["src/adapters"],
            "@utils/*": ["src/utils/*"],
            "@redux/*": ["src/stores/redux/*"],
            "@redux": ["src/stores/redux"],
            "@test/*": ["test/*"],
            "@test": ["test"]
        },
        "incremental": true
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": [
        "node_modules",
        "__generated__/globalTypes.ts",
        "test/*",
        "cypress/*"
    ]
}
